extends layout

block content
  h1= title
  - let createInstance = `create(\"/elephant/create\")`
  button.btn( class="btn-primary ml-1", onclick= createInstance) Create
  - let items = results;
  div(class="container-fluid")
   div(class="row m-1")
    each item in items
     - let destination = `dispatch(\"/elephant/update?id=${item._id}\")`
     - let detailInstance = `detailyut(\"/elephant/detail?id=${item._id}\")`
     - let deleteInstance = `deleteyut(\"/elephant/delete?id=${item._id}\")`
     div(class="row-sm-2", class="m-1") Item #{item.name}(#{item.age}) is #{item.species}
      button.btn( class="btn-primary ml-1", onclick= destination) Update
      button.btn( class="btn-primary ml-1", onclick= detailInstance) Detail 
      button.btn( class="btn-primary ml-1", onclick= deleteInstance) Delete
    div.container-fluid 
     div.row
      each elephant,index in items 
       div.col-sm-2(onclick=`buy(${index})`) #{elephant.name}
       div.col-sm-2(onclick=`buy(${index})`) #{elephant.age}
       div.col-sm-2(onclick=`buy(${index})`) #{elephant.species}
       br
       hr

  script. 
       function buy(index)
       {
        alert(`you purchased Item: ${index+1}`)
       }
  script.
       function dispatch(path)
       {
         window.location.href=path
       }
  script.
       function create(path)
       {
         window.location.href=path
       }
  script.
       function detailyut(path)
       {
         window.location.href=path
       }
  script.
       function deleteyut(path)
       {
         window.location.href=path
       }  
    

    

  